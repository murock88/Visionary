<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: "Article Title" %>
    <%= f.input :body, label: false, placeholder: "Article Content"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit Sweet Article", class: "btn btn-primary" %>
    <%= f.button :submit, "Submit Sweet Article 2", class: "btn btn-primary btn-xs" %>
    <%= f.button :submit %>
    <%= f.button :submit %>
  </div>
<% end %>
